﻿
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Email</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="row justify-content-center mt-5">

        <div class="col-5">

            <div class="card">
                <div class="card-header"><h3 class="text-center">Reset account</h3></div>
                <div class="card-body">
                    @if (ViewBag.Reseted == null)
                    {
                        <form action="@Url.Action("Reset","Start")" method="post">
                            <p>Enter your email address and we'll send you a link to reset your password.</p>

                            <div class="mb-3">
                                <label>Email</label>
                                <input type="email" class="form-control" name="email" value="@(ViewBag.Email !=null ? ViewBag.Email : "")" required />
                            </div>

                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.Message
                                </div>
                            }

                            <div class="mb-3">
                                <div class="d-grid">
                                    <button class="btn btn-primary" type="submit">Reset</button>
                                    <a class="btn btn-link" href="@Url.Action("Login","Start")">Back</a>
                                </div>
                            </div>


                        </form>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <p>Your password was reset, we sent you a message to reset your email.</p>
                            <a class="btn btn-success" href="@Url.Action("Login","Start")">Sign in</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>